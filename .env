# Backend settings
API_HOST=localhost
API_PORT=8000

# Email configuration (used in notifications/send_email.py)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_ADDRESS=influentai.notifications@gmail.com
EMAIL_PASSWORD=your-app-password-here   # Use an App Password if 2FA is enabled

# LangChain + OpenAI
OPENAI_API_KEY=your_openai_key_here
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.langchain.com
LANGCHAIN_API_KEY=your_langchain_key

# MongoDB / Local SQLite (Optional, if used)
DB_URL=sqlite:///./influentai.db

# Scheduler timing (Cron-style or simple interval in seconds)
SCHEDULER_INTERVAL_HOURS=48

# Allowed platforms
SUPPORTED_PLATFORMS=YouTube,Instagram,LinkedIn

# Optional: CORS origins (if frontend is hosted elsewhere)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
